@model IEnumerable<Movie>
@{ Layout = "_Layout"; ViewBag.Title = "Search Movie";}

<h2>Search Movie <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<form method="post" action="SearchMovie">
    <div class="form-group">
        <label for="movieId">Movie Name or Actor Name:</label>
        <input class="form-control" name="query" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Search</button>
    </div>
</form>

<p style="color:red">@ViewBag.Error </p>

@if (Model != null)
{
<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Genre</th>
            <th>Release</th>
            <th>Age</th>
            <th>Top Actors</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.movieId</td>
                <td>@r.movieName</td>
                <td>@r.description</td>
                <td>@r.movieGenre</td>
                <td>@r.releaseDate</td>
                <td>@r.ageRestriction</td>
                <td>
                    <ul>
                        @foreach (var actor in r.topActors)
                        {
                            <li>@actor.actorName</li>
                        }

                    </ul>
                </td>              
            </tr>
        }
    </tbody>
</table>
}