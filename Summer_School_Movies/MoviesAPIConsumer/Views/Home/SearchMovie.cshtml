@model Movie
@{ Layout = "_Layout"; ViewBag.Title = "Search Movie";}

<h2>Search Movie <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<form method="post" action="SearchMovie">
    <div class="form-group">
        <label for="movieId">Movie Id:</label>
        <input class="form-control" name="query" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Search</button>
    </div>
</form>

<p style="color:red">@ViewBag.Error </p>

@if (Model != null)
{
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Movie Name</th>
                <th>Movie Description</th>
                <th>Genre</th>
                <th>Release Date</th>
                <th>Age Restriction</th>
                <th>Top Actors</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.movieId</td>
                <td>@Model.movieName</td>
                <td>@Model.description</td>
                <td>@Model.movieGenre</td>
                <td>@Model.releaseDate</td>
                <td>@Model.ageRestriction</td>
                <td>
                    @{ if (Model.topActors != null)
                        {
                            <ul>
                                @foreach (var actor in Model.topActors)
                                {
                                    <li>@actor.actorName</li>
                                }

                            </ul>
                        }
                    }
                </td>
            </tr>
        </tbody>
    </table>
}